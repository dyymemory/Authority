    ///<param name="node">当前选择节点</param>
    /// </summary>
    ValidateDeptTreeSelected: function (node) {
        if (!node) {
            layui.use('layer', function () {
                var layer = layui.layer;
                layer.alert("请选择一个部门");
            });
            return false;
        }
        return true;
